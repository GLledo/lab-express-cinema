<div class="row justify-content-around">
    <div class="col-2">
         <img src={{image}} alt="">
    </div>
    <div class="col-6">
        <a href="/movies">Go back</a>
        <h1>{{title}}</h1>
        <h2>Director: {{director}}</h2>
        <h3>Stars</h3>
        <ul>
            {{#each stars}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>Summary: {{description}}</p>
        <ul>
            {{#each showtimes}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
</div>